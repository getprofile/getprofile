{
  "name": "@getprofile/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=../../.env src/index.ts",
    "build": "tsup src/index.ts --format esm --dts",
    "start": "node dist/index.js",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@getprofile/config": "workspace:*",
    "@getprofile/core": "workspace:*",
    "@getprofile/db": "workspace:*",
    "@hono/node-server": "^1.13.7",
    "hono": "^4.6.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "eslint": "^9.39.1",
    "tsup": "^8.0.0",
    "tsx": "^4.19.0",
    "typescript": "5.9.2",
    "vitest": "^1.0.0"
  }
}
